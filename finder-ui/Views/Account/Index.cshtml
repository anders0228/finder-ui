@model finder_ui.Models.CreateAccountViewModel

<div class="container">
    <div class="row">
        <div class="col align-self-center">
            @using (Html.BeginForm("CreateAccount", "Account", FormMethod.Post))
            {
                <div class="text-center">
                    <h1>Skapa Konto</h1>
                </div>
                <hr />
            <div class="form-group">
                <label for="userFirstName">Förnamn</label>
                @Html.HiddenFor(vm => vm.id)
                @Html.TextBoxFor(vm => vm.firstname, new { @class = "form-control text-center", @placeholder = "Förnamn", @Required = "required" })
                @Html.ValidationMessageFor(vm => vm.firstname)
            </div>
            <div class="form-group">
                <label for="userLastName">Efternamn</label>

                @Html.TextBoxFor(vm => vm.surname, new { @class = "form-control text-center", @placeholder = "Efternamn", @Required = "required" })
                <div style="color:red">
                    @Html.ValidationMessageFor(vm => vm.surname)
                </div>
            </div>
            <div class="form-group">
                <label for="userEmail">E-postadress</label>
                @Html.TextBoxFor(vm => vm.email, new { @class = "form-control text-center", @placeholder = "E-postadress", @Required = "required" })
                <div style="color:red">
                    @Html.ValidationMessageFor(vm => vm.email)
                </div>

            </div>
            <div class="form-group">
                <label for="userName">Användarnamn</label>
                @Html.TextBoxFor(vm => vm.username, new { @class = "form-control text-center", @placeholder = "Användarnamn", @Required = "required" })
                <div style="color:red">
                    @Html.ValidationMessageFor(vm => vm.username)
                </div>
                

            </div>
            <div class="form-group">
                <label for="userPassword">Lösenord</label>
                @Html.PasswordFor(vm => vm.password, new { @class = "form-control text-center", @placeholder = "Lösenord", @Required = "required" })
                <div style="color:red">
                    @Html.ValidationMessageFor(vm => vm.password)
                </div>
            </div>
            <div>
                <h5 style="color:red">@ViewBag.Message</h5>
            </div>
                <button type="submit" class="btn btn-primary">Skapa Konto</button>
            }
        </div>

    </div>
</div>