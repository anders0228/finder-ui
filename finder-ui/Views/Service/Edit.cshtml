                @Html.DropDownListFor(x => Model.ServiceStatusId, new SelectList(Model.StatusList, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServiceStatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Picture, "Bild", htmlAttributes: new { @class = "control-label col-md-2" })
