@model finder_ui.Group3ServiceReference.Service

@{
    ViewBag.Title = "Delete";
}

<h2>Radera</h2>

<h3>Är det säkert att du vill ta bort det här?</h3>
<div>
    <h4>Annons</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Skapad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>

        <dt>
            Titel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Användarnamn (id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorID)
        </dd>

        <dt>
            Beskrivning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Startdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            Slutdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            Bild
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Picture)" height="100" width="100" />
        </dd>

        <dt>
            Pris
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceStatus.ServiceStatusType.Name)
        </dd>


        <dt>
           Annonstyp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceType.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Radera" class="btn btn-default" /> |
        <a class="button" href="~/Service/Index">Gå tillbaka</a>
    </div>
    }
</div>
